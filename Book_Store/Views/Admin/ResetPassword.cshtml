@model Book_Store.ViewModels.ResetPasswordViewModel
@{
    Layout = "_AdminLayout";
}

<h3>Đặt mật khẩu cho: @Model.Email</h3>

<form asp-action="ResetPassword" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="UserId" />

    <div class="alert alert-warning">
        Bạn có thể <strong>để trống</strong> để hệ thống sinh mật khẩu ngẫu nhiên,
        hoặc <strong>nhập mật khẩu mới</strong> theo ý muốn.
    </div>

    <div class="mb-3">
        <label asp-for="NewPassword" class="form-label"></label>
        <input asp-for="NewPassword" class="form-control" autocomplete="new-password" />
        <span class="text-danger" asp-validation-for="NewPassword"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label"></label>
        <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" />
        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
    </div>

    <button type="submit" class="btn btn-warning">Xác nhận</button>
    <a asp-action="CustomerDetails" asp-route-id="@Model.UserId" class="btn btn-secondary ms-2">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
