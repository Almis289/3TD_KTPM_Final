@model List<Book_Store.Models.ChatSession>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Chat";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<h3>Danh sách cuộc trò chuyện</h3>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>User ID</th>
            <th>Trạng thái</th>
            <th>Thời gian tạo</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.UserId</td>
                <td>@(s.IsClosed ? "Đã kết thúc" : "Đang hoạt động")</td>
                <td>@s.CreatedAt.ToLocalTime()</td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@s.Id">Xem chi tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>
