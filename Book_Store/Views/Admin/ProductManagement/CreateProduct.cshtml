@model Book_Store.Models.ProductViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = Model.ProductId == 0 ? "Thêm sản phẩm mới" : "Chỉnh sửa sản phẩm";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">@ViewData["Title"]</h4>
        </div>
        <div class="card-body">
            <form asp-action="@(Model.ProductId == 0 ? "CreateProduct" : "EditProduct")" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="ProductId" />
                <fieldset class="mb-4">
                    <legend class="h5">Thông tin sản phẩm</legend>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="ProductName" class="form-label">Tên sản phẩm</label>
                            <input asp-for="ProductName" class="form-control" placeholder="Tên sản phẩm" />
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-3">
                            <label asp-for="Price" class="form-label">Giá bán</label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Giá bán" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-3">
                            <label asp-for="StockQuantity" class="form-label">Số lượng</label>
                            <input asp-for="StockQuantity" type="number" class="form-control" placeholder="Số lượng" />
                            <span asp-validation-for="StockQuantity" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <input type="hidden" asp-for="ImageUrl" />
                        <!-- Upload ảnh -->
                        <div class="form-group col-md-6">
                            <label asp-for="ImageFile" class="form-label">Ảnh sản phẩm</label>
                            <input asp-for="ImageFile" type="file" class="form-control" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>

                        <!-- Hiển thị ảnh hiện tại -->
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="form-group col-md-6 d-flex flex-column align-items-start">
                                <label class="form-label">Ảnh hiện tại:</label>
                                <img src="@Url.Content(Model.ImageUrl)" alt="Ảnh sản phẩm" width="150" height="150" class="img-thumbnail mt-2" />
                            </div>
                        }

                        <!-- Tác giả -->
                        <div class="form-group col-md-6">
                            <label asp-for="AuthorName" class="form-label">Tác giả</label>
                            <input asp-for="AuthorName" class="form-control" placeholder="Tên tác giả" />
                            <span asp-validation-for="AuthorName" class="text-danger"></span>
                        </div>

                        <!-- Thể loại -->
                        <div class="form-group col-md-6">
                            <label asp-for="CategoryName" class="form-label">Thể loại</label>
                            <input asp-for="CategoryName" class="form-control" placeholder="Tên thể loại" />
                            <span asp-validation-for="CategoryName" class="text-danger"></span>
                        </div>
                    </div>
                </fieldset>

                <fieldset class="mb-4">
                    <legend class="h5">Chi tiết sản phẩm</legend>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="form-label">Mô tả</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Mô tả sản phẩm"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-4">
                            <label asp-for="Publisher" class="form-label">Nhà xuất bản</label>
                            <input asp-for="Publisher" class="form-control" placeholder="Nhà xuất bản" />
                            <span asp-validation-for="Publisher" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-4">
                            <label asp-for="PageCount" class="form-label">Số trang</label>
                            <input asp-for="PageCount" type="number" class="form-control" placeholder="Số trang" />
                            <span asp-validation-for="PageCount" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-4">
                            <label asp-for="Language" class="form-label">Ngôn ngữ</label>
                            <input asp-for="Language" class="form-control" placeholder="Ngôn ngữ" />
                            <span asp-validation-for="Language" class="text-danger"></span>
                        </div>
                    </div>
                </fieldset>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">
                        @(Model.ProductId == 0 ? "Thêm sản phẩm" : "Lưu thay đổi")
                    </button>
                    <a asp-action="ProductManagement" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
