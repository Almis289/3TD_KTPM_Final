@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Trang Quản Trị</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Admin" asp-action="Index">BOOK STORE ADMIN</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="adminNavbar">
                <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link nav-user" asp-controller="Admin" asp-action="CustomerManagement">Quản Lí Người Dùng</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-product" asp-controller="Admin" asp-action="ProductManagement">Quản Lí Sản Phẩm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-order" asp-controller="Admin" asp-action="OrderManagement">Quản Lí Đơn Hàng</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-order" asp-controller="Admin" asp-action="RevenueManagement">Quản Lí Doanh Thu</a>

                    </li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <span class="nav-link text-white">
                            👤 @User.Identity.Name
                        </span>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-danger" asp-controller="Account" asp-action="Logout">Đăng xuất</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Nội dung chính -->
    <div class="container-fluid px-4">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="bg-light text-center text-muted mt-5 py-3">
        <small>&copy; @DateTime.Now.Year - Trang quản trị Book Store</small>
    </footer>
    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
