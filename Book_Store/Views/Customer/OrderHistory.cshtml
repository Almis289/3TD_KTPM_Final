@model List<Book_Store.Models.Order>

@{
    ViewBag.Title = "Lịch sử đơn hàng";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>📜 Lịch sử đơn hàng</h2>
    <a asp-controller="Account" asp-action="Profile" class="btn btn-outline-secondary btn-sm">Quay lại</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">Bạn chưa có đơn hàng nào.</div>
    <a asp-action="ProductList" class="btn btn-primary">Mua ngay</a>
}
else
{
    @foreach (var order in Model)
    {
        <div class="card mb-4">
            <div class="card-header bg-light">
                <strong>Mã đơn hàng:</strong> @order.OrderId
                <span class="float-end text-muted">@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</span>
            </div>
            <div class="card-body">
                <p>
                    <strong>Trạng thái:</strong>
                    @if (order.Status == Book_Store.Models.OrderStatus.DangXuLy)
                    {
                        <span class="badge bg-warning">Đang xử lý</span>
                    }
                    else if (order.Status == Book_Store.Models.OrderStatus.DangChuanBi)
                    {
                        <span class="badge bg-info">Đang chuẩn bị</span>
                    }
                    else if (order.Status == Book_Store.Models.OrderStatus.DangVanChuyen)
                    {
                        <span class="badge bg-primary">Đang vận chuyển</span>
                    }
                    else if (order.Status == Book_Store.Models.OrderStatus.DaGiao)
                    {
                        <span class="badge bg-success">Đã giao</span>
                    }
                    else if (order.Status == Book_Store.Models.OrderStatus.DaHuy)
                    {
                        <span class="badge bg-danger">Đã hủy</span>
                    }
                </p>
                <table class="table table-sm table-bordered">
                    <thead>
                        <tr>
                            <th>Sản phẩm</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                            <th>Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var detail in order.OrderDetails)
                        {
                            <tr>
                                <td>@detail.Product.ProductName</td>
                                <td>@($"{detail.UnitPrice:N0} đ")</td>
                                <td>@detail.Quantity</td>
                                <td>@($"{(detail.UnitPrice * detail.Quantity):N0} đ")</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <p class="fw-bold text-end">
                    Tổng cộng: @($"{order.TotalAmount:N0} đ")
                </p>
            </div>
        </div>
    }
}
