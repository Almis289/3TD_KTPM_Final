@model List<Book_Store.Models.CartItem>

@{
    ViewBag.Title = "Thanh toán";
    decimal total = Model.Sum(item => item.Product.Price * item.Quantity);
}

<h2 class="mb-4">🛒 Thanh toán đơn hàng</h2>

@if (!Model.Any())
{
    <div class="alert alert-warning">Giỏ hàng của bạn đang trống.</div>
}
else
{
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Sản phẩm</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var price = item.Product.Price;
                var quantity = item.Quantity;
                var totalItem = price * quantity;

                <tr>
                    <td>@item.Product.ProductName</td>
                    <td>@string.Format("{0:N0} đ", price)</td>
                    <td>@quantity</td>
                    <td>@string.Format("{0:N0} đ", totalItem)</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3" class="text-end">Tổng cộng:</th>
                <th>@string.Format("{0:N0} đ", total)</th>
            </tr>
        </tfoot>
    </table>

    @using (Html.BeginForm("Checkout", "Customer", FormMethod.Post, new { id = "checkoutForm" }))
    {
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label for="address" class="form-label">Địa chỉ giao hàng</label>
            <textarea id="address" name="address" class="form-control" rows="3" required></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Phương thức thanh toán</label>

            <div class="form-check">
                <input class="form-check-input" type="radio" name="paymentMethod" value="COD" checked>
                <label class="form-check-label">COD - Thanh toán khi nhận hàng</label>
            </div>

            <div class="form-check">
                <input class="form-check-input" id="paypalOption" type="radio" name="paymentMethod" value="PayPal">
                <label class="form-check-label">Thanh toán bằng PayPal</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" id="vnpayOption" type="radio" name="paymentMethod" value="VNPAY">
                <label class="form-check-label">Thanh toán qua VNPAY</label>
            </div>

        </div>

        <div id="paypal-section" style="display:none;">
            <hr />
            <h4>Thanh toán qua PayPal</h4>
            <div id="paypal-button-container"></div>
        </div>
       

        <div class="d-flex gap-2">
            <button type="button" id="btnSubmit" class="btn btn-success">
                ✅ Xác nhận đặt hàng
            </button>
            <a asp-action="Cart" class="btn btn-secondary">🔙 Quay lại giỏ hàng</a>
        </div>
    }
}

<script src="https://www.paypal.com/sdk/js?client-id=AVjgnYgepESvSrzK0yWQNNvCzjfPBfycUGrtn07O5HzhxJM3S96-oF9-bJK3UuudZ9GbWb5M1vufLJPD&currency=USD"></script>

<script>
    const form = document.getElementById("checkoutForm");
    const btnSubmit = document.getElementById("btnSubmit");
    const paypalOption = document.getElementById("paypalOption");
    const vnpayOption = document.getElementById("vnpayOption");
    const paypalSection = document.getElementById("paypal-section");
    const cartItems = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(
        Model.Select(i => new {
            productId = i.Product.ProductId,
            productName = i.Product.ProductName,
            price = i.Product.Price / 25000m, // ✅ VND → USD
            quantity = i.Quantity
        })
    ));

    // Hiện / ẩn PayPal
    document.querySelectorAll("input[name='paymentMethod']").forEach(radio => {
        radio.addEventListener("change", () => {
            paypalSection.style.display = paypalOption.checked ? "block" : "none";
            btnSubmit.style.display = (paypalOption.checked) ? "none" : "inline-block";
        });
    });

    // XỬ LÝ SUBMIT
    btnSubmit.addEventListener("click", function () {

        const address = document.getElementById("address").value;

        if (!address || address.trim() === "") {
            alert("Vui lòng nhập địa chỉ giao hàng");
            return;
        }

        if (paypalOption.checked) {
            alert("Vui lòng sử dụng nút PayPal để thanh toán");
            return;
        }

        if (vnpayOption.checked) {
            form.action = "/Customer/VnpayCreate";
        } else {
            form.action = "/Customer/Checkout";
        }

        form.submit();
    });




    // PayPal Button
    paypal.Buttons({
        createOrder: (data, actions) => {

            const address = document.getElementById("address").value;
            if (!address || address.trim() === "") {
                alert("Vui lòng nhập địa chỉ giao hàng trước khi thanh toán PayPal");
                return actions.reject();
            }
            let totalUSD = cartItems.reduce((sum, i) => {
                return sum + (i.price * i.quantity);
            }, 0).toFixed(2);

            return actions.order.create({
                purchase_units: [{
                    amount: {
                        currency_code: "USD",
                        value: totalUSD,
                        breakdown: {
                            item_total: {
                                currency_code: "USD",
                                value: totalUSD
                            }
                        }
                    },
                    items: cartItems.map(item => ({
                        name: item.productName,          
                        unit_amount: {
                            currency_code: "USD",
                            value: item.price.toFixed(2)
                        },
                        quantity: item.quantity.toString(),
                        sku: item.productId.toString()     
                    }))
                }]
            });
        },
        onApprove: (data, actions) => {
            return actions.order.capture().then(details => {

                const transactionId =
                    details.purchase_units[0].payments.captures[0].id;

                fetch('/Customer/PaypalSuccess', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        orderID: data.orderID,
                        payerID: data.payerID,
                        transactionID: transactionId, 
                        amount: @total,
                        shippingAddress: document.getElementById("address").value
                    })
                })
                .then(r => r.json())
                .then(r => {
                    if (r.success)
                        window.location.href = r.redirectUrl;
                });
            });
        }

    }).render('#paypal-button-container');
</script>

