@model IEnumerable<Book_Store.Models.CartItem>

@{
    ViewBag.Title = "Thanh toán";
    decimal total = Model.Sum(item => item.Product.Price * item.Quantity);
}

<h2 class="mb-4">🛒 Thanh toán đơn hàng</h2>

@if (!Model.Any())
{
    <div class="alert alert-warning">Giỏ hàng của bạn đang trống.</div>
}
else
{
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Sản phẩm</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var price = item.Product.Price;
                var quantity = item.Quantity;
                var totalItem = price * quantity;

                <tr>
                    <td>@item.Product.ProductName</td>
                    <td>@string.Format("{0:N0} đ", price)</td>
                    <td>@quantity</td>
                    <td>@string.Format("{0:N0} đ", totalItem)</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3" class="text-end">Tổng cộng:</th>
                <th>@string.Format("{0:N0} đ", total)</th>
            </tr>
        </tfoot>
    </table>

    @using (Html.BeginForm("Checkout", "Customer",  FormMethod.Post, new { id = "checkoutForm" }))
    {
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label for="address" class="form-label">Địa chỉ giao hàng</label>
            <textarea id="address" name="address" class="form-control" rows="3" required></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Phương thức thanh toán</label>

            <div class="form-check">
                <input class="form-check-input" type="radio" name="paymentMethod" value="COD" checked>
                <label class="form-check-label">COD - Thanh toán khi nhận hàng</label>
            </div>

            <div class="form-check">
                <input class="form-check-input" type="radio" name="paymentMethod" value="Chuyển khoản">
                <label class="form-check-label">Chuyển khoản khi nhận hàng</label>
            </div>

            <div class="form-check">
                <input class="form-check-input" id="paypalOption" type="radio" name="paymentMethod" value="PayPal">
                <label class="form-check-label">Thanh toán bằng PayPal</label>
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" type="radio" name="paymentMethod" value="VNPAY" id="vnpayOption">
                <label class="form-check-label">Thanh toán qua VNPAY</label>
            </div>
            
            
        </div>

        <div id="paypal-section" style="display:none;">
            <hr />
            <h4>Thanh toán qua PayPal</h4>
            <div id="paypal-button-container"></div>
        </div>

        <!-- VNPAY Section -->
        <div id="vnpay-section" class="border rounded p-4 mb-4 text-center bg-light" style="display: none;">
            <h4 class="text-danger mb-3">Bạn đã chọn thanh toán qua VNPAY</h4>
            <p class="text-muted mb-4">Nhấn nút dưới đây để chuyển đến cổng thanh toán an toàn của VNPAY</p>

            <!-- KHÔNG dùng <form> nữa, chỉ để hidden fields và button -->
            <input type="hidden" name="Amount" value="@total" />
            <input type="hidden" name="OrderDescription" value="Thanh toan don hang tai Book Store" />
            <input type="hidden" name="Name" value="Khách hàng" />
            <input type="hidden" name="address" id="vnpayAddressHidden" />

            <button type="button" id="vnpaySubmitBtn" class="btn btn-danger btn-lg px-5 shadow">
                Thanh toán VNPAY ngay
            </button>
        </div>




        <!-- Nút submit chính của form checkout (cho COD, Chuyển khoản, PayPal) -->
        <div class="d-flex gap-2 mt-4">
            <button type="submit" class="btn btn-success" id="confirmOrderBtn">
                ✅ Xác nhận đặt hàng
            </button>
            <a asp-action="Cart" asp-controller="Customer" class="btn btn-secondary">
                🔙 Quay lại giỏ hàng
            </a>
        </div>
    }
}

<script src="https://www.paypal.com/sdk/js?client-id=AVjgnYgepESvSrzK0yWQNNvCzjfPBfycUGrtn07O5HzhxJM3S96-oF9-bJK3UuudZ9GbWb5M1vufLJPD&currency=USD"></script>

<script>
    // =============== PayPal Section ===============
    const paypalOption = document.getElementById('paypalOption');
    const paypalSection = document.getElementById('paypal-section');

    // =============== VNPAY Section ===============
    const vnpayOption = document.getElementById('vnpayOption');
    const vnpaySection = document.getElementById('vnpay-section');
    const addressInput = document.getElementById('address');
    const vnpayAddressHidden = document.getElementById('vnpayAddressHidden');

    function updatePaymentSections() {
        // PayPal
        paypalSection.style.display = paypalOption.checked ? 'block' : 'none';

        // VNPAY
        if (vnpayOption.checked) {
            vnpaySection.style.display = 'block';
            // Copy địa chỉ hiện tại vào hidden field
            if (addressInput && vnpayAddressHidden) {
                vnpayAddressHidden.value = addressInput.value;
            }
        } else {
            vnpaySection.style.display = 'none';
        }

        // Ẩn/hiện nút xác nhận chính (không submit nếu chọn VNPAY hoặc PayPal)
        const confirmBtn = document.getElementById('confirmOrderBtn');
        if (vnpayOption.checked || paypalOption.checked) {
            confirmBtn.style.display = 'none';
        } else {
            confirmBtn.style.display = 'block';
        }
    }

    // Lắng nghe thay đổi radio
    document.querySelectorAll('input[name="paymentMethod"]').forEach(radio => {
        radio.addEventListener('change', updatePaymentSections);
    });

    // Cập nhật địa chỉ realtime khi người dùng gõ (nếu đang chọn VNPAY)
    if (addressInput) {
        addressInput.addEventListener('input', () => {
            if (vnpayOption.checked && vnpayAddressHidden) {
                vnpayAddressHidden.value = addressInput.value;
            }
        });
    }

    // Khởi tạo trạng thái ban đầu
    updatePaymentSections();

    // =============== PayPal Buttons ===============
    paypal.Buttons({
        createOrder: function (data, actions) {
            return actions.order.create({
                purchase_units: [{
                    amount: {
                        value: '@(Math.Round(total / 25000, 2))' // VND -> USD (tỷ giá ~25,000)
                    }
                }]
            });
        },
        onApprove: function (data, actions) {
            return actions.order.capture().then(function (details) {
                const address = document.getElementById("address").value;

                fetch('/Customer/PaypalSuccess', {  // cần có action này nếu dùng PayPal thật
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        orderID: data.orderID,
                        payerID: data.payerID,
                        amount: @total,
                        shippingAddress: address
                    })
                })
                .then(res => res.json())
                .then(res => {
                    if (res.success) {
                        window.location.href = res.redirectUrl;
                    } else {
                        alert('Thanh toán PayPal thất bại!');
                    }
                });
            });
        }
    }).render('#paypal-button-container');

    // Thêm xử lý riêng cho nút VNPAY
    document.getElementById('vnpaySubmitBtn').addEventListener('click', function () {
        // Copy địa chỉ vào hidden field (nếu chưa có)
        document.getElementById('vnpayAddressHidden').value = document.getElementById('address').value;

        // Kiểm tra địa chỉ bắt buộc
        if (!document.getElementById('address').value.trim()) {
            alert('Vui lòng nhập địa chỉ giao hàng!');
            return;
        }

        // Override action của form chính chỉ cho VNPAY
        const mainForm = document.getElementById('checkoutForm');
        mainForm.action = '@Url.Action("CreatePaymentVnpay", "Customer")';
        mainForm.method = 'POST';

        // Submit form chính
        mainForm.submit();
    });

    // Khởi tạo trạng thái ban đầu
    updatePaymentSections();
</script>



