@model List<Book_Store.Models.Product>

@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center py-5">
    <h1 class="display-3 fw-bold">📚 3TD_BOOKS</h1>
</div>

<!-- Carousel -->
<div class="container mb-5">
    <div id="bookCarousel" class="carousel slide custom-carousel" data-bs-ride="carousel">
        <div class="carousel-inner rounded shadow">
            <div class="carousel-item active">
                <img src="anh04.jpg" class="d-block w-100" alt="Sách mới">
            </div>
            <div class="carousel-item">
                <img src="anh01.jpg" class="d-block w-100" alt="Bestseller">
            </div>
            <div class="carousel-item">
                <img src="anh03.jpg" class="d-block w-100" alt="Khuyến mãi">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#bookCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#bookCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
</div>

<div class="text-center pb-5">
    <a href="@Url.Action("ProductList", "Customer")" class="btn btn-warning btn-lg">
        Khám phá ngay
    </a>
</div>

<!-- Sách nổi bật -->
<div class="container">
    <h2 class="text-center mb-4">🔥 Các loại sách</h2>
    <div class="row g-4">
        @foreach (var book in Model)
        {
            <div class="col-md-3">
                <div class="card h-100 shadow-sm">
                    <img src="@book.ImageUrl" class="card-img-top" alt="@book.ProductName">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@book.ProductName</h5>
                        <p class="card-text text-muted small">@book.Author?.AuthorName</p>
                        <p class="mb-1">
                            <strong>Giá:</strong> @book.Price.ToString("N0") đ
                        </p>
                        <a href="@Url.Action("ProductDetail", "Customer", new { id = book.ProductId })"
                           class="btn btn-outline-dark btn-sm mt-auto">
                            Xem chi tiết
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Banner khuyến mãi -->
<div class="bg-info text-white text-center py-4 mt-5">
    <h5 class="mb-2">🎁 Các khuyến mãi dành tặng</h5>
    <p class="mb-0">Miễn phí vận chuyển cho đơn hàng từ <strong>300.000đ</strong>.</p>
    <p class="mb-0"> Đăng nhập/Đăng ký tài khoản để đồng hành cùng chúng tôi</p>
</div>

<!-- Footer -->
<footer class="bg-dark text-white text-center py-4 mt-5">
    <p class="mb-1">📞 Hotline: 1900 1234 | ✉️ Email: 3TD@bookstore.vn</p>
    <p class="mb-0">© 2025 BookStore. All rights reserved.</p>
</footer>
