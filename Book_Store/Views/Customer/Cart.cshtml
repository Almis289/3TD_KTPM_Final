@model List<Book_Store.Models.CartItem>

@{
    ViewBag.Title = "Giỏ hàng";
    decimal total = Model.Sum(item => item.Product.Price * item.Quantity);
}

<h2>🛒 Giỏ hàng</h2>

@if (!Model.Any())
{
    <div class="alert alert-warning">Giỏ hàng của bạn đang trống.</div>
    <a asp-action="ProductList" class="btn btn-primary">Tiếp tục mua sắm</a>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Sản phẩm</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var gia = item.Product.Price.ToString("N0") + " đ";
                var thanhTien = (item.Product.Price * item.Quantity).ToString("N0") + " đ";
                <tr>
                    <td>@item.Product.ProductName</td>
                    <td>@gia</td>
                    <td>
                        <div class="d-flex align-items-center">
                            <!-- Nút "-" -->
                            <form asp-controller="Customer" asp-action="Decrement" method="post" class="me-1">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="productId" value="@item.Product.ProductId" />
                                <button type="submit" class="btn btn-sm btn-outline-secondary">-</button>
                            </form>

                            <!-- Hiển thị số lượng -->
                            <span>@item.Quantity</span>

                            <!-- Nút "+" (nếu muốn tăng số lượng) -->
                            <form asp-controller="Customer" asp-action="AddToCart" method="post" class="ms-1">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="productId" value="@item.Product.ProductId" />
                                <input type="hidden" name="quantity" value="1" />
                                <button type="submit" class="btn btn-sm btn-outline-secondary">+</button>
                            </form>
                        </div>
                    </td>
                    <td>@thanhTien</td>
                    <td>
                        <form asp-controller="Customer"
                              asp-action="RemoveFromCart"
                              method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="productId" value="@item.Product.ProductId" />
                            <button type="submit" class="btn btn-sm btn-danger">Xoá</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3" class="text-end">Tổng cộng:</th>
                <th>@total.ToString("N0") đ</th>
                <th>
                    <form asp-controller="Customer" asp-action="ClearCart" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger btn-sm">Xoá toàn bộ</button>
                    </form>
                </th>
            </tr>
        </tfoot>
    </table>

    <div class="mt-3">
        <a asp-action="Checkout" class="btn btn-success">Thanh toán</a>
        <a asp-action="ProductList" class="btn btn-secondary">Tiếp tục mua sắm</a>
    </div>
}
